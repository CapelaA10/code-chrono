{
  "productName": "Code Chrono",
  "version": "0.1.0",
  "identifier": "com.codechrono.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Code Chrono",
        "width": 380,
        "height": 420,
        "label": "main"
      }
    ],
    "security": {
      "capabilities": [
        "default",
         {
          "identifier": "main-capability",
          "description": "Code Chrono permissions",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "global-shortcut:default",
            "global-shortcut:allow-register",
            "global-shortcut:allow-unregister",
            "dialog:default",
            "dialog:allow-save",
            "dialog:allow-open",
            "dialog:allow-message",
            "fs:allow-write-text-file",
            {
              "identifier": "fs:allow-app-write",
              "allow": [{ "path": "$APPDATA/**" }]
            }
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  },
  "plugins": {}
}
